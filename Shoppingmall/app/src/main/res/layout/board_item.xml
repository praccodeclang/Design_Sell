<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/cv_board_wrap"
    android:layout_gravity="center_horizontal"
    android:background="@drawable/border_layout_round_rectangle"
    android:elevation="1dp"
    android:layout_margin="15dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:background="@drawable/border_layout_underline">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tv_boardTitle"
                android:text="title"
                android:ems="10"
                android:layout_gravity="center"
                android:textColor="@color/black"
                android:gravity="center"
                android:textSize="20sp"
                android:fontFamily="@font/nanum_myeongjo_bold"/>
            <ImageView
                android:id="@+id/iv_board_etc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_more_vert_24"
                android:layout_gravity="right"/>
        </FrameLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_boardImgs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:overScrollMode="never"
            android:padding="10dp"/>
        <LinearLayout
            android:id="@+id/li_board_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginHorizontal="10dp"
            android:padding="10dp">
            <ImageView
                android:id="@+id/iv_boardUserProfile"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:scaleType="fitXY"
                android:src="@drawable/test_profile"/>
            <TextView
                android:id="@+id/tv_nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:padding="10dp"
                android:fontFamily="@font/nanum_myeongjo_regular"
                android:text="NickName"
                android:textColor="@color/black"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/lottie_board_like"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:lottie_autoPlay="false"
                app:lottie_loop="false"
                app:lottie_fileName="like.json"
                android:padding="5dp"/>
            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/lottie_board_addCart"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:lottie_autoPlay="false"
                app:lottie_loop="false"
                app:lottie_fileName="addcart.json"/>
        </LinearLayout>
        <TextView
            android:id="@+id/tv_uploadTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:fontFamily="@font/nanum_myeongjo_regular"
            android:layout_marginHorizontal="10dp"
            android:text="1시간 전"
            android:textColor="@color/black"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>